<%- include('../partials/header.ejs') %>
<section data-barba="container" data-barba-namespace="insert">
    <div class="container">
        <% if (alert.status) { %> 
            <div class=" alert-box <%= alert.style %>   ">
                <p><%= alert.message %> </p>
            </div>
        <% } %> 
    </div>
    <!-- control btns  -->
    <%- include('../partials/components/controlBtns.ejs') %> 
    <div class="container">
        <!-- data form  -->
        <div class="user-form">
            <p class="min-sec-title">Input your data:</p>
            <div class="form-wrap">
                <% if (type === 'details') { %> 
                    <%- include('../partials/forms/detailsForm.ejs') %> 
                <% } else if (type === 'dc') { %> 
                    <%- include('../partials/forms/detailsDcForm.ejs') %> 
                <% } else if (type === 'shared') { %> 
                    <%-  include('../partials/forms/detailsSharedForm.ejs') %>
                <% } %> 
            </div>
        </div>
        <!-- recent added  -->
        <% if (data.length) { %> 
            <div class="recent-added">
            <div>
                <p class="section-title">Most recent records:</p>
                <div class="card-list">
                    <% if (data.type === 'details') { %> 
                    <h1>Details</h1>
                    <% } else if (data.type === 'dc') { %> 
                        <h1>Dc</h1>
                    <% } else if (data.type === 'shared') { %> 
                        <h1>Shared</h1>
                    <% } %>
                </div>
                 
            </div>
        </div>
        <% } %> 
        
    </div>
</section>
<%- include('../partials/footer.ejs') %>
